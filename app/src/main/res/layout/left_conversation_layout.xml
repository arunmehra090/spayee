<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:background="@drawable/reply_box_border"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentStart="true"
            style="@style/message_title_attributes"
            android:id="@+id/tvLeftName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Arun kumar"/>

        <TextView
            style="@style/message_text_attributes"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tvLeftName"
            android:id="@+id/tvLeftMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hi message..."/>

        <TextView
            style="@style/message_time_attributes"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tvLeftMessage"
            android:id="@+id/tvLeftMsgTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12:00 PM"/>
    </RelativeLayout>
</layout>